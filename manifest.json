{
  "manifest_version": 3,
  "name": "D4 Paragon Board Access",
  "version": "1.1.0",
  "description": "Makes Diablo 4 paragon board guides accessible for screen reader users by converting visual boards to navigable tables. Works on Mobalytics.gg and Maxroll.gg.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mobalytics.gg/*",
    "https://maxroll.gg/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mobalytics.gg/diablo-4/*", "https://maxroll.gg/d4/*"],
      "js": ["parser.js", "maxroll-parser.js", "table-generator.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "D4 Paragon Board Access"
  }
}
